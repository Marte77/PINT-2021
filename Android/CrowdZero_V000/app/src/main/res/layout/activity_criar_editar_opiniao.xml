<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CriarEditarOpiniao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutCriarEditarOpiniaoActivity"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descricao"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayoutdescricaoopiniao"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="274dp"
                android:layout_height="59dp"
                android:layout_marginTop="9dp"
                android:hint="@string/descricao"
                android:textColorHint="@color/cinzento"
                app:boxStrokeColor="@color/verdeBotao"
                app:hintTextColor="@color/preto">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descricaoInputOpiniao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/classificacao"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menuClassificacaoOpiniao"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/classificacao"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">
                <AutoCompleteTextView
                    android:id="@+id/autoCompleteClassificacaoOpiniao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:labelFor="@+id/menuClassificacaoOpiniao"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/botaoSubmeterOpiniao"
                android:text="@string/submeter_opiniao"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>