<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.CardOpiniaoFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardopiniao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fotoPerfilOpiniaoCard"
                    android:layout_width="0dp"
                    android:layout_height="146dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNomeDataOpiniao"
                        android:layout_width="243dp"
                        android:layout_height="wrap_content"
                        android:text="Nome e data da opiniao" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/linearLayoutEstrelasOpiniao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/estrela1"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:src="@drawable/ic_star_outline_black_24dp"/>
                        <ImageView
                            android:id="@+id/estrela2"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:src="@drawable/ic_star_outline_black_24dp"/>
                        <ImageView
                            android:id="@+id/estrela3"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:src="@drawable/ic_star_outline_black_24dp"/>
                        <ImageView
                            android:id="@+id/estrela4"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:src="@drawable/ic_star_outline_black_24dp"/>
                        <ImageView
                            android:id="@+id/estrela5"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:src="@drawable/ic_star_outline_black_24dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewDescricaoOpiniao"
                        android:layout_width="match_parent"
                        android:layout_height="65dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>